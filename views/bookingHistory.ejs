<!DOCTYPE html>
<html>

<head>
    <title>VistaRail - Previous Bookings</title>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../public/components/style.css">
    <style>
        :root {
            --background: #183D3D;
            --text: #93B1A6;
            --accent: #DDE6ED;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: var(--accent);
            margin: 0;
        }

        main {
            padding: 20px;
        }

        h1 {
            color: var(--background);
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            background-color: var(--accent);
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border: 1px solid black;
        }

        thead {
            background-color: var(--background);
            color: var(--accent);
        }

        tbody tr:nth-child(even) {
            background-color: var(--text);
        }

        input[type="submit"] {
            background-color: var(--background);
            color: var(--text);
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="navbar-left">
                <a href="/"><span class="website-name">VistaRail</span></a>
            </div>
            <div class="navbar-right">
                <ul>
                    <li class="dropdown">
                        <a href="" class="dropbtn">Booking</a>
                        <div class="dropdown-content">
                            <a href="/">Book Ticket</a>
                            <a href="/findBooking">Check PNR</a>
                            <a href="/bookedTickets">Booking History</a>
                        </div>
                    </li>
                    <li><a href="/trainBetweenStations">Train Between Stations</a></li>
                    <li><a href="/checkBerth">Check Berth</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <h1>Your Bookings</h1>
        <table>
            <thead>
                <tr>
                    <th>PNR</th>
                    <th>Train Number</th>
                    <th>Train Name</th>
                    <th>Class</th>
                    <th>Coach</th>
                    <th>Seat Number</th>
                    <th>Journey Date</th>
                    <th>Origin</th>
                    <th>Destination</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Number of Passengers</th>
                    <th>Total Fare</th>
                </tr>
            </thead>
            <tbody>
            <% ticketData.forEach(ticket=> { %>
                <tr>
                    <td>
                        <%= ticket.PNR %>
                    </td>
                    <td>
                        <%= ticket.TRAIN_NO %>
                    </td>
                    <td>
                        <%= ticket.TRAIN_NAME %>
                    </td>
                    <td>
                        <%= ticket.CLASS %>
                    </td>
                    <td>
                        <%= ticket.COACH %>
                    </td>
                    <td>
                        <%= ticket.SEAT_NO %>
                    </td>
                    <td>
                        <%= ticket.JOURNEY_DATE.toLocaleDateString('en-IN', { year: 'numeric' , month: 'long' ,
                        day: '2-digit' }) %>
                    </td>
                    <td>
                        <%= ticket.ORIGIN %>
                    </td>
                    <td>
                        <%= ticket.DESTINATION %>
                    </td>
                    <td>
                        <%= ticket.DEPARTURE_TIME %>
                    </td>
                    <td>
                        <%= ticket.ARRIVAL_TIME %>
                    </td>
                    <td>
                        <%= ticket.NO_OF_PASSENGERS %>
                    </td>
                    <td>
                        â‚¹<%= ticket.TOTAL_FARE %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
    </body>
</html>