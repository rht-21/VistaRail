<!DOCTYPE html>
<html>

<head>
    <title>VistaRail - Available Trains</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Open+Sans&display=swap');

        :root {
            --background: #183D3D;
            --text: #93B1A6;
            --accent: #DDE6ED;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: var(--accent);
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: var(--background);
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: var(--accent);

        }

        th,
        td {
            padding: 8px;
            text-align: left;
        }

        thead {
            background-color: var(--background);
            color: var(--accent);
        }

        tbody tr:nth-child(even) {
            background-color: var(--text);
        }

        input[type="submit"] {
            background-color: var(--background);
            color: var(--text);
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>Available Trains</h1>
    <table>
        <thead>
            <tr>
                <th>Train Number</th>
                <th>Train Name</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% trainData.forEach(train=> { %>
                <tr>
                    <td>
                        <%= train.TRAIN_NO %>
                    </td>
                    <td>
                        <%= train.TRAIN_NAME %>
                    </td>
                    <td>
                        <%= train.ORIGIN %>
                    </td>
                    <td>
                        <%= train.DESTINATION %>
                    </td>
                    <td>
                        <%= train.DEPARTURE_TIME %>
                    </td>
                    <td>
                        <%= train.ARRIVAL_TIME %>
                    </td>
                    <td>
                        <form action="/login" method="GET">
                            <input type="hidden" name="trainNumber" value="<%= train.TRAIN_NO %>">
                            <input type="hidden" name="origin" value="<%= train.ORIGIN %>">
                            <input type="hidden" name="destination" value="<%= train.DESTINATION %>">
                            <input type="submit" value="Select Train">
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>